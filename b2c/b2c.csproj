<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net6.0</TargetFramework>
        <PackageId>b2c-cli</PackageId>
        <PackageVersion>6.0.0</PackageVersion>
        <Title>Azure AD B2C Command Line Tool</Title>
        <Authors>endpointsystems</Authors>
        <Description>This tool lets you create groups and users, assign users to groups, and perform policy tasks within Azure AD B2C. </Description>
        <PackageProjectUrl>https://github.com/elvogel/b2c</PackageProjectUrl>
        <RepositoryUrl>https://github.com/elvogel/b2c</RepositoryUrl>
        <RepositoryType>GitHub</RepositoryType>
        <PackageTags>azure,ad,b2c,cli</PackageTags>
        <Company>Endpoint Systems</Company>
        <Product>b2c command line tool</Product>
        <AssemblyVersion>6.0.0</AssemblyVersion>
        <FileVersion>6.0.0</FileVersion>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageReleaseNotes>upgrade to .NET Core 6 and add IEF commands</PackageReleaseNotes>
        <LangVersion>10</LangVersion>
        <Copyright>2007-2022 Endpoint Systems. All rights reserved.</Copyright>
        <PackageIcon>icon.png</PackageIcon>
        <PackageReadmeFile>README.md</PackageReadmeFile>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Azure.Core" Version="1.24.0" />
      <PackageReference Include="Azure.Identity" Version="1.6.0" />
      <PackageReference Include="EPS.B2C.IEF" Version="0.0.3" />
      <PackageReference Include="EPS.Extensions.B2CGraphUtil" Version="6.0.0" />
      <PackageReference Include="McMaster.Extensions.CommandLineUtils" Version="4.0.1" />
      <PackageReference Include="Microsoft.Extensions.Configuration" Version="6.0.1" />
      <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="6.0.0" />
      <PackageReference Include="Microsoft.Extensions.Configuration.FileExtensions" Version="6.0.0" />
      <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="6.0.0" />
      <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="6.0.0" />
      <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="6.0.0" />
      <PackageReference Include="Microsoft.Graph" Version="4.25.0" />
      <PackageReference Include="Microsoft.Graph.Core" Version="2.0.8" />
      <PackageReference Include="Microsoft.IdentityModel.Clients.ActiveDirectory" Version="5.2.9" />
      <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
    </ItemGroup>
    <ItemGroup>
        <None Update="icon.png">
            <Pack>true</Pack>
            <Visible>false</Visible>
            <PackagePath>/</PackagePath>
        </None>
        <None Include="$(SolutionDir)README.md" Pack="true" PackagePath="\" />
      <None Update="b2c.json">
          <Pack>false</Pack>
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </None>
    </ItemGroup>

</Project>